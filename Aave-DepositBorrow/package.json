    "eslint-plugin-prettier": "^5.1.2",
    "hardhat": "^2.19.0",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aave/core-v3": "^1.19.1",
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0"
  }
